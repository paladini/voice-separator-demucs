{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "Voice Separator",
  "version": "1.0.0",
  "identifier": "com.paladini.voice-separator",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://127.0.0.1:7860"
  },
  "app": {
    "windows": [
      {
        "title": "Voice Separator - AI Audio Separation",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "center": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["main-capability"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "category": "AudioVideo",
    "shortDescription": "AI-Powered Audio Separation",
    "longDescription": "Separate vocals and instruments from music using advanced AI technology. Built with Meta AI's Demucs model for high-quality audio source separation.",
    "copyright": "MIT License - Fernando Paladini"
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
